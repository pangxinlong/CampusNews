<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_activity_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="标题(必填)"
        android:paddingLeft="10dp"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/im_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_activity_title"
        android:background="@color/all_backcolor" />

    <TextView
        android:id="@+id/et_release_people"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/im_divider1"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="发布人"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/im_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_release_people"
        android:background="@color/all_backcolor" />

    <EditText
        android:id="@+id/et_activity_content"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/im_divider2"
        android:background="@null"
        android:gravity="top|left"
        android:hint="内容(必填)"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/im_divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_activity_content"
        android:background="@color/all_backcolor" />

    <RelativeLayout
        android:id="@+id/rl_activity_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:background="@drawable/item_selector"
        android:layout_below="@+id/im_divider3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="添加图片"/>
        
        <ImageView
            android:id="@+id/im_activity_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_release"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:background="@drawable/normal_button_selector"
        android:text="发		布" />

</RelativeLayout>