<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" ><!--#A7d79B  -->

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/logo"
        android:text="hello" />

    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/et_login_password"
        android:layout_alignRight="@+id/et_login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/login_name"
        android:drawablePadding="10dp"
        android:hint="请输入用户名"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bt_login"
        android:layout_alignRight="@+id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/login_password"
        android:drawablePadding="20dp"
        android:hint="请输入用密码"
        android:paddingLeft="10dp"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="@dimen/login_button_width"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/et_login_password"
        android:layout_below="@+id/et_login_password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_selector"
        android:text="注册"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="@dimen/login_button_width"
        android:layout_height="50dp"
        android:layout_above="@+id/tv_forget_password"
        android:layout_alignRight="@+id/tv_forget_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_button_selector"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:text="忘记密码？"
        android:clickable="true"
        android:textColor="@drawable/login_forget_password_selector" />

</RelativeLayout>