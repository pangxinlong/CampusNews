<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_title"
    android:layout_width="fill_parent"
    android:layout_height="45.33dip"
    android:background="#00A154" >

    <!-- 三横 -->

    <TextView
        android:id="@+id/commont_title_bar_left_normal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="43.33dp"
        android:background="@drawable/title_left_selector"
        android:drawableLeft="@drawable/title_left_normal"
        android:drawablePadding="1dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:text="Tile"
        android:textColor="#ffffff"
        android:textSize="19.5sp"
        android:visibility="invisible" />

    <!-- 箭头 -->

    <TextView
        android:id="@+id/commont_title_bar_back_normal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="43.33dp"
        android:background="@drawable/title_left_selector"
        android:drawableLeft="@drawable/title_back_normal"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:text="Tile"
        android:textColor="#ffffff"
        android:textSize="19.5sp"
        android:visibility="invisible" />

</RelativeLayout>